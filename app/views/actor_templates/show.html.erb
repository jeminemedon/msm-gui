<h1><%= @the_actor.name %></h1>

<p><strong>Dob:</strong> <%= @the_actor.dob %></p>
<p><strong>Bio:</strong> <%= @the_actor.bio %></p>

<% @the_actor.characters.each do |character| %>
  <p>
    <strong>Character:</strong> <%= character.name %><br>
    <strong>Movie:</strong> <%= character.movie.title %><br>
    <strong>Director:</strong> <%= character.movie.director.name %>
  </p>
<% end %>

<hr>

<h2>Update actor</h2>

<form action="/modify_actor/<%= @the_actor.id %>" method="post">
  <label for="image_input">Image</label>
  <input id="image_input" name="query_image" value="<%= @the_actor.image %>">

  <label for="name_input">Name</label>
  <input id="name_input" name="query_name" value="<%= @the_actor.name %>">

  <label for="dob_input">Dob</label>
  <input id="dob_input" name="query_dob" value="<%= @the_actor.dob %>">

  <label for="bio_input">Bio</label>
  <input id="bio_input" name="query_bio" value="<%= @the_actor.bio %>">

  <button type="submit">Update actor</button>
</form>

<p><a href="/delete_actor/<%= @the_actor.id %>">Delete this actor</a></p>
