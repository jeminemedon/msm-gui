<h1>All Movies</h1>

<% @list_of_movies.each do |a_movie| %>
  <div>
    <p><strong>Title:</strong> <%= a_movie.title %></p>
    <p><strong>Director:</strong> <%= a_movie.director.name %></p>
    <a href="/movies/<%= a_movie.id %>">Show details</a>
  </div>
<% end %>

<h2>Add a New Movie</h2>

<form action="/insert_movie" method="post">
  <label for="title_field">Title</label>
  <input id="title_field" type="text" name="query_title">

  <label for="image_field">Image</label>
  <input id="image_field" type="text" name="query_image">

  <label for="year_field">Year</label>
  <input id="year_field" type="number" name="query_year">

  <label for="duration_field">Duration</label>
  <input id="duration_field" type="number" name="query_duration">

  <label for="description_field">Description</label>
  <input id="description_field" type="text" name="query_description">

  <label for="director_id_field">Director ID</label>
  <input id="director_id_field" type="number" name="query_director_id">

  <button type="submit">Create movie</button>
</form>
