<h1><%= @the_movie.title %></h1>

<p><strong>Year:</strong> <%= @the_movie.year %></p>
<p><strong>Duration:</strong> <%= @the_movie.duration %> minutes</p>
<p><strong>Description:</strong> <%= @the_movie.description %></p>
<p><strong>Image:</strong></p>
<img src="<%= @the_movie.image %>" style="width: 200px;">

<p><strong>Director:</strong> <%= @the_movie.director.name %></p>

<hr>

<h2>Update movie</h2>

<form action="/modify_movie/<%= @the_movie.id %>" method="post">
  <label for="image_input">Image</label>
  <input id="image_input" name="query_image" value="<%= @the_movie.image %>">

  <label for="title_input">Title</label>
  <input id="title_input" name="query_title" value="<%= @the_movie.title %>">

  <label for="year_input">Year</label>
  <input id="year_input" name="query_year" value="<%= @the_movie.year %>">

  <label for="duration_input">Duration</label>
  <input id="duration_input" name="query_duration" value="<%= @the_movie.duration %>">

  <label for="description_input">Description</label>
  <input id="description_input" name="query_description" value="<%= @the_movie.description %>">

  <label for="director_input">Director ID</label>
  <input id="director_input" name="query_director_id" value="<%= @the_movie.director_id %>">

  <button type="submit">Update movie</button>
</form>

<p><a href="/delete_movie/<%= @the_movie.id %>">Delete this movie</a></p>
